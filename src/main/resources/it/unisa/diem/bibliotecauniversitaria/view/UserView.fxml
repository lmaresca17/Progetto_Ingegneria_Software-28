<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unisa.diem.bibliotecauniversitaria.controller.UserController"
      prefWidth="600" prefHeight="400">

    <children>
        <Label layoutX="250" layoutY="10" text="Sezione Utenti" style="-fx-font-size: 24px;"/>

        <!-- Area ricerca -->
        <HBox layoutX="50" layoutY="50" spacing="10">
            <TextField fx:id="txtRicerca" promptText="Cerca utenti..." prefWidth="250"/>
            <Button fx:id="btnRicerca" text="ðŸ”" onAction="#handleRicerca"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </HBox>

        <!-- Bottoni azioni -->
        <HBox layoutX="50" layoutY="100" spacing="20">
            <Button fx:id="btnInserisciUtente" text="Inserisci Utente" onAction="#handleInserisciUtente"/>
            <Button fx:id="btnModificaUtente" text="Modifica Utente" onAction="#handleModificaUtente" disable="true"/>
            <Button fx:id="btnEliminaUtente" text="Elimina Utente" onAction="#handleEliminaUtente" disable="true"/>
            <Button fx:id="homeButton" text="Home" onAction="#handleHome"/>
        </HBox>

        <!-- Tabella utenti -->
        <TableView fx:id="tableViewUtenti" layoutX="50" layoutY="150" prefWidth="500" prefHeight="200">
            <columns>
                <TableColumn fx:id="colMatricola" text="Matricola" prefWidth="100"/>
                <TableColumn fx:id="colCognome" text="Cognome" prefWidth="150"/>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            </columns>
        </TableView>
    </children>
</Pane>
